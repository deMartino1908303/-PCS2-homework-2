Fraudulent Activity Notifications

def activityNotifications(expenditure, d):
    
    past_expences_not_sort = expenditure[0:d]
    allert = 0

        
    for count in range(len(expenditure)-d):
        
        past_expences = sorted(past_expences_not_sort)
        
        mediana = int(median(past_expences))*2
           
        if expenditure[count + d] >= mediana : allert += 1

        print('the current expence : ',expenditure[count + d],'|----|','the current median : ', mediana)
            
        past_expences_not_sort.append(expenditure[count])
        past_expences_not_sort.pop(0)
        
    return allert
